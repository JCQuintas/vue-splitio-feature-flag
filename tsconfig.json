{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "client/*": ["client/*"],
      "utilities/*": ["utilities/*"],
      "directive/*": ["directive/*"],
      "common/*": ["common/*"]
    }
  },
  "include": ["src/**/*"]
}
